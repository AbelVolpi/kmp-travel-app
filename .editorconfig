root = true

[*]
indent_size = 4
continuation_indent_size = 4

[*.{kt,kts}]
# Setup default code style
ktlint_code_style = intellij_idea

# Disable filename matcher and wildcard imports
ktlint_standard_filename = disabled
ktlint_standard_no-wildcard-imports = disabled

# Disable for a better readability in Compose files (ex: modifiers)
ktlint_standard_multiline-expression-wrapping = disabled

#Disabled for add empty lines after class declaration and functions
ktlint_standard_no-blank-line-before-rbrace = enabled
ktlint_standard_no-empty-first-line-in-class-body = disabled

# Disable for a better readability in Compose files 
ij_kotlin_align_multiline_chain_calls = false

# Remove trailing comma
ij_kotlin_allow_trailing_comma = false
ij_kotlin_allow_trailing_comma_on_call_site = false

# Support for compose annotations
ktlint_function_naming_ignore_when_annotated_with = Composable

# No break lines when classes have more than one parameter
ktlint_class_signature_rule_force_multiline_when_parameter_count_greater_or_equal_than = unset

# No blank line between sealed classes
ktlint_standard_blank-line-before-declaration = disabled
ktlint_standard_class-signature = disabled

# Allows use curly braces with strings
ktlint_standard_string-template=disabled
